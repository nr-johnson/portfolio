div(class='work-item-details' data-owner=data._id)
    div(class='background')
    div(class='panel')
        header
            h3= data.title
        div(class='row w-100 mx-auto')
            div(class='col-12 col-md-6')
                figure
                    img(src=data.image, alt='NRJohnson - ' + data.title)
                div(class='details-links row w-100 mx-auto mb-4 px-2')
                    div(class='col-6')
                        a(href=data.repo class='mobile-button light w-100' target="_blank") GitHub Repo
                    div(class='col-6')
                        a(href=data.url class='mobile-button light w-100' target="_blank") Live Site
            
            div(class='col-12 col-md-6')
                div
                    | !{data.details}