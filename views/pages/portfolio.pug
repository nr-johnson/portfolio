section(class='container')
    div(class='row')
        div(class='col')
            header(class='mb-4')
                a(href="/resume?data=true" class='plain mobile-button light portfolio-resume-button page-redir') View My Full Resume 
                hr

            section(class='row work-items')
                for item in data 
                    div(class='col-12 col-md-4 mb-4 animation shift')
                        div(class='panel')
                            header
